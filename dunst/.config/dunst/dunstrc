# vim: ft=cfg
[global]
    alignment = center
    follow = none
    format = "%s\n%b"
    horizontal_padding = 8
    indicate_hidden = yes
    line_height = 5
    markup = yes
    notification_height = 30
    padding = 25
    plain_text = no
    separator_height = 0
    shrink = no
    sort = yes
    word_wrap = yes
    corner_radius = 6
    transparency = 0

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the "#" and following would be interpreted as a comment.
    background = "#222222"
    foreground = "#888888"
    timeout = 5
    # Icon for notifications with low urgency, uncomment to enable
    #icon = /path/to/icon

[urgency_normal]
    background = "#285577"
    foreground = "#ffffff"
    timeout = 5
    # Icon for notifications with normal urgency, uncomment to enable
    #icon = /path/to/icon

[urgency_critical]
    background = "#900000"
    foreground = "#ffffff"
    frame_color = "#ff0000"
    timeout = 0
    # Icon for notifications with critical urgency, uncomment to enable
    #icon = /path/to/icon
