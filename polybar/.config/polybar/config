[colors]
transparent = #00ffffff

background = ${xrdb:color7:#222}
foreground = ${xrdb:color0:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[fonts]
font-0 = Roboto:size=24;3
font-1 = Material Design Icons:size=18;2
font-2 = Weather Icons:size=24;2
font-3 = FontAwesome:size=20;2

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/topbar]
inherit = fonts
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 40
offset-x = 0
offset-y = 8
radius = 0.0
fixed-center = true
override-redirect = true

background = ${colors.transparent}
foreground = ${colors.foreground}

line-size = 0

border-size = 0
border-color = #00000000

padding-left = 5
padding-right = 5

module-margin-left = 2
module-margin-right = 2

;modules-left = bitcoin
;modules-center = 
modules-right = openweathermap-simple

tray-position = left
tray-padding = 0
tray-background = ${self.background}
tray-detached = false
tray-maxsize = 20
tray-scale = 1
#tray-background = #0063ff

wm-restack = i3

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[bar/bottombar]
inherit = fonts
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 100
offset-x = 0
offset-y = 140
radius = 0.0
fixed-center = true
bottom = true
border-size = 20

background = ${colors.transparent}
foreground = ${colors.foreground}

padding-left = 5
padding-right = 5

module-margin-left = 2
module-margin-right = 2

modules-center = i3

;override-redirect = true
wm-restack = i3

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /home

label-mounted = %{F#ffffff}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = false
enable-scroll = false
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${bar/bottombar.foreground}
label-mode-background = ${bar/bottombar.background}

; focused = Active workspace on focused monitor
label-focused = 
label-focused-font = 3
label-focused-background = ${colors.transparent}
label-focused-foreground = ${colors.background}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = 
label-unfocused-foreground = ${self.label-focused-foreground}
label-unfocused-font = 3
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}
;
; urgent = Workspace with urgency hint set
label-urgent = 
label-urgent-font = 3
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1

[module/backlight]
type = internal/backlight
card = intel_backlight

format = <ramp> <label> 

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-font = 2


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format= <label> 
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp1s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-prefix = 1
format-connected-underline = #9f78e1
label-connected = %essid%
label-connected-foreground = ${bar/topbar.foreground}

;format-disconnected-prefix = " "
;format-disconnected-prefix-font = 3
;format-disconnected = no network
format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${bar/topbar.foreground}

label-disconnected = 
label-disconnected-font = 3
label-disconnected-foreground = ${bar/topbar.foreground}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-font = 3
ramp-signal-foreground = ${bar/topbar.foreground}

[module/date]
type = internal/date
interval = 1

date = " %a %e %b"
date-alt = " %Y-%m-%d"

time = " %H:%M"
time-alt = "%H:%M:%S"

format-prefix-foreground = ${colors.foreground}
format-underline = ${bar/topbar.foreground}

format = <label>
label = %date% %time%
label-font = 0

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume> 

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

format-muted =  --
format-muted-foreground = ${colors.foreground}
label-muted-foreground = ${colors.foreground}
label-muted = "Muted"
label-muted-font = 1

[module/battery]
type = internal/battery
#battery = BAT1
#adapter = ADP1
poll-interval = 0
format-discharging = <label-discharging>  <ramp-capacity>
format-full = <label-full>  <ramp-capacity>
format-charging = <label-charging>  <ramp-capacity>  
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 70

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = #CA407E

ramp-0 = 
ramp-font = 3
ramp-foreground = ${bar/bottombar.foreground}

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = 
label-open-padding = 1
label-open-foreground = ${bar/topbar.foreground}

label-close = 
label-close-padding = 1
label-close-foreground = ${bar/topbar.foreground}

label-separator = |
label-separator-foreground = ${bar/topbar.foreground}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = reboot

menu-2-0 = power off
menu-2-0-exec = poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/openweathermap-simple]
type = custom/script
exec = ~/.config/polybar/openweathermap-simple.sh
interval = 600
label-font = 3
label-padding = 4

[module/github]
type = internal/github

format = <label>
format-prefix = " "
format-prefix-foreground = ${bar/bottombar.foreground}

label = %notifications%

token = ${file:/home/metamist/secret/github.token}

empty-notifications = true

[bar/bar]
inherit = colors

height = 100
width = 16%
offset-x = 1%
offset-y = 20

bottom = true
fixed-center = true
font-0 = Roboto:size=24;3
font-1 = Font Awesome:size=30;5
font-2 = NotoEmoji:size=100;

modules-center = date
module-margin = 2

tray-position = none
override-redirect = true

padding = 8
radius = 9.0
wm-name = bar
wm-restack = i3

background = transparent
foreground = ${colors.background}

[bar/bar2]
inherit = bar/bar
modules-center = backlight volume cpu memory wlan battery
height = 100
width = 23%
offset-x = 77%
